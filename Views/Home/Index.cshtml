@model BlaBlaCar.ViewModels.Route.SearchRouteViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4"></h1>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <div class="d-flex justify-content-center">
        <form asp-controller="Route" asp-action="Search" method="post" class="row">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="col">
                <div class="form-group bmd-form-group">
                    <label asp-for="FromCity" class="bmd-label-floating"></label>
                    <select id="FromCity" name="FromCity" class="btn btn-secondary dropdown-toggle">
                        <option class="dropdown-item" value="Астрахань">Астрахань</option>
                        <option class="dropdown-item" value="Москва">Москва</option>
                        <option class="dropdown-item" value="Ростов-на-Дону">Ростов-на-Дону</option>
                        <option class="dropdown-item" value="Сочи">Сочи</option>
                    </select>
                </div>
            </div>

            <div class="col">
                <div class="form-group bmd-form-group">
                    <label asp-for="ToCity" class="bmd-label-floating"></label>
                    <select id="ToCity" name="ToCity" class="btn btn-secondary dropdown-toggle">
                        <option class="dropdown-item" value="Москва">Москва</option>
                        <option class="dropdown-item" value="Астрахань">Астрахань</option>
                        <option class="dropdown-item" value="Ростов-на-Дону">Ростов-на-Дону</option>
                        <option class="dropdown-item" value="Сочи">Сочи</option>
                    </select>
                </div>
            </div>

            <div class="col">
                <div class="form-group bmd-form-group">
                    <label asp-for="Date" class="bmd-label-floating"></label>
                    <input asp-for="Date" class="form-control" type="date" value="2020-12-17">
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>
            </div>

            <div class="col">
                <div class="form-group bmd-form-group">
                    <label asp-for="PassengersAmount" class="bmd-label-floating"></label>
                    <input asp-for="PassengersAmount" class="form-control" type="number" min="1" max="10" value="1">
                    <span asp-validation-for="PassengersAmount" class="text-danger"></span>
                </div>
            </div>

            <div class="col">
                <div class="justify-content-center" style="padding-top: 25px;">
                    <button type="submit" class="btn btn-primary btn-fill btn-lg">Поиск</button>
                </div>
            </div>

        </form>

    </div>
</div>